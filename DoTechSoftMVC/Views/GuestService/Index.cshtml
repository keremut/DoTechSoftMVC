@model IEnumerable<Service>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Html.PartialAsync("~/Views/Partials/_GuestHeadPartial.cshtml")

<body class="sub_page">

    <div class="hero_area">

        <div class="hero_bg_box">
            <div class="bg_img_box">
                <img src="images/hero-bg.png" alt="">
            </div>
        </div>

        <!-- header section strats -->
        @await Html.PartialAsync("~/Views/Partials/_GuestHeader.cshtml")
        <!-- end header section -->
    </div>


    <!-- service section -->

    <section class="service_section layout_padding">
        <div class="service_container">
            <div class="container ">
                <div class="heading_container heading_center">
                    <h2>
                        <span>Neler Yapıyoruz</span>
                    </h2>
                    <p>
                        DoTech olarak web yazılım, raporlama ve kurumsal dijital çözümlerle işletmenizin dijital dönüşümünü destekliyoruz.
                    </p>
                </div>
                <div class="row">
                    @foreach(var item in Model)
                    {
                        <div class="col-md-4 ">
                            <div class="box ">
                                <div class="img-box">
                                    <img src="@Url.Content(item.Icon)" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.Title
                                    </h5>
                                    <p>
                                        @item.Desc
                                    </p>
                                    <a asp-controller="GuestService" asp-action="ServiceDetail" asp-route-id="@item.ServiceId">
                                        İncele
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
                
            </div>
        </div>
    </section>

    <!-- end service section -->
    <!-- info section -->
    @await Html.PartialAsync("~/Views/Partials/_GuestInfo.cshtml")

    <!-- end info section -->
    @await Html.PartialAsync("~/Views/Partials/_GuestFooter.cshtml")
    @await Html.PartialAsync("~/Views/Partials/_GuestScripts.cshtml")

</body>

</html>

