@model IEnumerable<Service>


<section id="service" class="service_section layout_padding">
    <div class="service_container">
        <div class="container ">
            <div class="heading_container heading_center">
                <h2>
                    <span>Neler Yapıyoruz</span>
                </h2>
                <p>
                    DoTech olarak web yazılım, raporlama ve kurumsal dijital çözümlerle işletmenizin dijital dönüşümünü destekliyoruz.
                </p>
            </div>
            <div class="row">
                @foreach ( var item in Model)
                {
                    <div class="col-md-4 ">
                        <div class="box ">
                            <div class="img-box">
                                <img src="@Url.Content(@item.Icon)" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.Title
                                </h5>
                                <p>
                                    @item.Desc
                                </p>
                                <a href="#">
                                    İncele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="btn-box">
                <a href="">
                    Tümünü Gör
                </a>
            </div>
        </div>
    </div>
</section>
